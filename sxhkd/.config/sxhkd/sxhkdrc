#     /home/david/Documents/Scripts/volumeDecrease.sh
    
# XF86AudioRaiseVolume
#     /home/david/Documents/Scripts/volumeIncrease.sh

# XF86AudioMute
#     /home/david/Documents/Scripts/volumeMute.sh

alt + minus
    amixer sset PCM 5%-

alt + equal
    amixer sset PCM 5%+

alt + 0
    amixer sset PCM toggle

alt + p
    playerctl -p spotify play-pause

alt + bracketleft 
    playerctl -p spotify previous

alt + bracketright
    playerctl -p spotify next

alt + shift + 3
    maim "/home/david/Pictures/Screenshots/$(date +%Y-%m-%d_%H%M).png"

alt + shift + 4
    maim -s "/home/david/Pictures/Screenshots/$(date +%Y-%m-%d_%H%M).png"

