[global/wm]
margin-top = 0
margin-bottom = 0
;

[settings]
format-padding = 2
format-background = ${colors.modulebg}

[colors]
fg = ${xrdb:foreground}
bg = ${xrdb:background}
modulebg = #282828

focused = #606060
urgent = ${xrdb:color9}

red = ${xrdb:color1}
orange = ${xrdb:color9}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}
magenta = ${xrdb:color5}
violet = ${xrdb:color13}
cyan = ${xrdb:color6}

[bar/top]
width = 100%
height = 36
offset-x = 0%
offset-y= 0%
;fixed-center =
override-redirect = false

background = ${colors.bg}
foreground = ${colors.fg}

font-0 = Fira Code Retina:size=10:;4
font-1 = MaterialIcons:size=10:;5
font-2 = Wuncon Siji:pixelsize=8:;2

modules-left =  xworkspaces xwindow i3
modules-center = time date
modules-right = spotify volume dropbox memory temp filesystem ssid

;tray-position = right
;tray-padding = 2
;tray-background = ${colors.bg}
;tray-transparent = false
;tray-detached = false

;open menu on right click
click-right = xdotool key super+m
;click-right = "thunar &"

overline-size = 2

border-size = 0
border-color = #00000000

spacing = 1
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

[module/volume]
type = internal/volume

master-soundcard = default
master-mixer = PCM

format-volume = <ramp-volume><label-volume>
module-margin-right = 1
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

format-volume-foreground = ${colors.fg}
;format-volume-background = ${colors.bg}

label-muted =  ───

format-volume-overline = ${colors.blue}
format-muted-overline = ${colors.blue}

[module/xwindow]
type = internal/xwindow
interval = 1
label = %title:0:50:...%

format-overline = ${colors.orange}

[module/xworkspaces]
type = internal/xworkspaces

enable-click = true
