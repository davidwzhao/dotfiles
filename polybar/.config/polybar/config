[module/date]
type = internal/date
interval = 1
date = "%A, %d %B"

label = %date%
format = <label>

format-prefix = " "
format-overline = ${colors.magenta}
format-background = ${colors.modulebg}

[module/time]
type = internal/date
interval = 1
time = "%I:%M %P"

label = %time%
format = <label>

;format = %icon-time% <time>
;format-padding = 1
;format-background = #73ecec
;format-foreground = #075859

format-prefix = " "
format-overline = ${colors.magenta}

[module/memory]
type = internal/memory
interval = 1

format = <label>
label = "%percentage_used%"

format-prefix = " "
format-overline = ${colors.cyan}

[module/temp]
type = internal/temperature
interval = 1

thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon0/temp1_input

format = <label>
format-warn = <label-warn>

label = "%temperature%"
label-warn = "%temperature%"
label-warn-foreground = ${colors.orange}

format-prefix = " "
format-warn-prefix = " "
format-overline = ${colors.cyan}
format-warn-overline = ${colors.cyan}

[module/filesystem]
type = internal/fs
interval = 10

mount-0 = /

format-mounted = <label-mounted>
label-mounted = " %percentage_used%"
label-unmounted = " %mountpoint% ---"

format-mounted-overline = ${colors.cyan}
format-unmounted-overline = ${colors.cyan}

[module/spotify]
type = custom/script
exec =  ~/bin/spotify.sh
interval = 0.1
click-left = playerctl -p spotify play-pause

format-overline = ${colors.blue}

[module/dropbox]
type = custom/script
exec =  ~/bin/dropbox.sh
interval = 1

format-prefix = " "
format-overline = ${colors.cyan}

[module/ssid]
type = custom/script

;format = <label><exec>
;exec = iwconfig wlp8s0 | grep ESSID | awk '{out=""; for (i=4; i<= NF; i++) out=out$i" "; print out}' | sed 's/ESSID:"\|"//g' | head -c -2
exec = iwgetid -r
interval = 10

format-prefix = " "
format-overline = ${colors.green}

