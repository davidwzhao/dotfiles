[module/temp]
type = internal/temperature
interval = 1

thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon0/temp1_input

format = <label>
format-warn = <label-warn>

label = "%temperature-c%"
label-warn = "%temperature-c%"
label-warn-foreground = ${colors.orange}

format-prefix = " "
format-warn-prefix = " "
format-background = ${colors.cyan}
format-warn-background = ${colors.cyan}

[module/filesystem]
type = internal/fs
interval = 10

mount-0 = /home

format-mounted = <label-mounted>
label-mounted = "󰋊 %percentage_used%"
label-unmounted = "󰋊 %mountpoint% ---"

format-mounted-overline = ${colors.cyan}
format-unmounted-overline = ${colors.cyan}

[module/spotify]
type = custom/script
exec =  ~/bin/spotify.sh
interval = 1
